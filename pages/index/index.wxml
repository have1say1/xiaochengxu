<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">获取你的头</button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view>
    <van-button bind:click="login" type="info">信息按钮</van-button>
  </view>
  <view>
    <van-button bind:click="usert" type="info">信息按钮</van-button>
  </view>
  <view>
    <van-button bind:click="set" type="info">信息按钮</van-button>
  </view>
  <view>
    <van-button bind:click="note" type="info">信息按钮</van-button>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>
