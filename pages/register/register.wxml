<!--pages/register/register.wxml-->
<view>
<view>
<van-nav-bar title="注册" safe-area-inset-top = "{{ false }}" >
  <van-icon name="ellipsis" slot="right" />
</van-nav-bar>
</view>
<view>
  <van-cell-group>
  <van-cell title="人脸" url="../register/face">
  <van-image
  round
  width="2rem"
  height="2rem"
  src="../../img/1.png"
  />
  </van-cell>
  <van-field
    value="{{ phonenumber }}"
    label="手机号"
    bind:input = "setp"
  />
  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    bind:input = "setpwd"
  />
  <van-field
    value="{{ username }}"
    label="姓名"
    bind:input = "setu"
  />
  <van-field
    value="{{ company }}"
    label="公司"
    bind:input = "setc"
  />
  <van-radio-group value="{{ radio }}" bind:change="onChange">
  <van-cell-group>
    <van-cell
      title="男"
      clickable
      data-name="1"
      bind:click="onClick"
    >
      <van-radio slot="right-icon" name="1" />
    </van-cell>
    <van-cell
      title="女"
      clickable
      data-name="2"
      bind:click="onClick"
    >
      <van-radio slot="right-icon" name="2" />
    </van-cell>
  </van-cell-group>
</van-radio-group>
  </van-cell-group>
  <text>\n</text>
  <view class = "s1">
  <van-button bindtap="register" round color="linear-gradient(to right, #4bb0ff, #6149f6)">注册</van-button>
  </view>
</view>
</view>
